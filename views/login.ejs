<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Averia+Sans+Libre:wght@300&family=Josefin+Sans:wght@300&display=swap"
    rel="stylesheet">
  <title>Login</title>
</head>

<body>
  <%- include('partials/navbar.ejs') %>

    <section class="p-5 my-5">
      <div class="container border-primary">
        <div class="card-header bg-primary text-center rounded">
          <h1 class="text-light ">Sign In</h1>
        </div>
        <form class="form-control d-flex flex-column" action="/signin" method="post">
          <label class="form-label py-3" for="username">Username</label>

          <input class="border-primary border rounded py-3" required type="text" name="username"
            placeholder="Username...">
          <label class="form-label py-3" for="password">Password</label>

          <input class="border-primary border rounded py-3" required type="password" name="password"
            placeholder="Password...">

          <input class="btn btn-primary py-3 mt-3 " type="submit" value="Sign In">
        </form>
      </div>
    </section>

    <%- include('partials/footer.ejs') %>
</body>

</html>