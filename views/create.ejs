<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Averia+Sans+Libre:wght@300&family=Josefin+Sans:wght@300&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="styles/landing.css">
  <title>Blog</title>
</head>

<body>

  <h1 class="text-primary my-4">Welcome, <%= username %>
  </h1>
  <%- include('partials/navbar.ejs') %>
    <section class="p-5 py-5 container">
      <div class="container h-50 w-75">
        <div class="card border-primary">
          <div class="card-header bg-primary text-center">
            <h1 class="text-light">Create Blog</h1>
          </div>
          <div class="card-body">
            <form id="createBlogForm" class="d-flex flex-column" action="/create" method="post">
              <label class="form-label card-text fw-bolder" for="posting">CRUD Blogging</label>
              <textarea class="rounded" name="createblog" id="blog" maxlength="500" cols="30"
                placeholder="Write a blog..." rows="10" required></textarea>

              <input class="btn btn-primary my-3" type="submit" value="Create">
            </form>
          </div>
        </div>
      </div>
    </section>

    <section class="p-5 py-5 container my-4">
      <div class="container">
        <div class="card border-primary">
          <div class="card-header text-center bg-primary">
            <h2 class="text-light card-text "></h2>
          </div>
          <div class="card-body">
            <!-- Check if userBlogs is an array and has entries -->
            <% if (Array.isArray(userBlogs) && userBlogs.length> 0) { %>
              <h2>Your Blogs:</h2>
              <ul>
                <% userBlogs.forEach(function(blog) { %>
                  <li>
                    <%= blog.createblog %>
                      <a href="/update/<%= blog._id %>" class="btn btn-success">Update</a>
                      <a href="/delete/<%= blog._id %>" class="btn btn-danger">Delete</a>
                  </li>

                  <% }); %>

              </ul>
              <% } else { %>
                <p>No blogs found for <%= username %>.</p>
                <% } %>
          </div>


        </div>
      </div>
    </section>

    <section class="p-5">
      <div class="container">
        <a class="btn btn-danger" href="/logout">Logout</a>
      </div>
    </section>



</body>

</html>